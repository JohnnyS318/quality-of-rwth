{
    "manifest_version": 3,
    "name": "Quality of RWTH",
    "version": "1.2.0",
    "description": "Makes RWTH websites more enjoyable",
    "permissions": [
        "*://*.rwth-aachen.de/*",
        "storage",
        "downloads",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.rwth-aachen.de/*"
            ],
            "js": [
                "rwthTools.js"
            ]
        }
    ],
    "background": {
        "service_worker": "server.js"
    },
    "options_ui": {
        "page": "options.html"
    },
    "action": {
        "default_icon": "icons/htwr.png",
        "browser_style": true,
        "default_popup": "popup.html"
    }
}
